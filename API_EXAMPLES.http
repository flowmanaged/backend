# Przykładowe requesty HTTP
# Możesz użyć tego w Postman, Thunder Client lub curl

# ========================================
# AUTORYZACJA
# ========================================

# 1. REJESTRACJA
POST http://localhost:3000/api/auth/register
Content-Type: application/json

{
  "email": "test@example.com",
  "password": "haslo123"
}

###

# 2. LOGOWANIE
POST http://localhost:3000/api/auth/login
Content-Type: application/json

{
  "email": "test@example.com",
  "password": "haslo123"
}

# Odpowiedź zawiera "token" - skopiuj go!

###

# 3. WERYFIKACJA EMAILA (użyj tokena z maila)
GET http://localhost:3000/api/auth/verify/TOKEN_Z_MAILA

###

# 4. ZAPOMNIAŁEM HASŁA
POST http://localhost:3000/api/auth/forgot-password
Content-Type: application/json

{
  "email": "test@example.com"
}

###

# 5. RESET HASŁA (użyj tokena z maila)
POST http://localhost:3000/api/auth/reset-password
Content-Type: application/json

{
  "token": "TOKEN_Z_MAILA",
  "password": "nowe-haslo123"
}

###

# ========================================
# UŻYTKOWNIK (wymagany JWT token)
# ========================================

# 6. PROFIL UŻYTKOWNIKA
GET http://localhost:3000/api/user/profile
Authorization: Bearer TWOJ_JWT_TOKEN

###

# 7. AKTYWUJ PREMIUM (demo - bez płatności)
POST http://localhost:3000/api/user/upgrade-premium
Authorization: Bearer TWOJ_JWT_TOKEN

###

# 8. STATUS SUBSKRYPCJI
GET http://localhost:3000/api/user/subscription
Authorization: Bearer TWOJ_JWT_TOKEN

###

# 9. USUŃ KONTO
DELETE http://localhost:3000/api/user/account
Authorization: Bearer TWOJ_JWT_TOKEN

###

# ========================================
# POSTĘPY (wymagany JWT token)
# ========================================

# 10. POBIERZ POSTĘPY W SEKCJACH
GET http://localhost:3000/api/progress/sections
Authorization: Bearer TWOJ_JWT_TOKEN

###

# 11. OZNACZ SEKCJĘ JAKO UKOŃCZONĄ (np. sekcja 5)
POST http://localhost:3000/api/progress/sections/5/complete
Authorization: Bearer TWOJ_JWT_TOKEN

###

# 12. ZAPISZ WYNIK QUIZU
POST http://localhost:3000/api/progress/quiz
Authorization: Bearer TWOJ_JWT_TOKEN
Content-Type: application/json

{
  "quizId": "main-quiz",
  "score": 18,
  "totalQuestions": 22,
  "answers": {
    "1": 1,
    "2": 0,
    "3": 2,
    "4": 1,
    "5": 3
  }
}

###

# 13. HISTORIA QUIZÓW
GET http://localhost:3000/api/progress/quiz/history?limit=10
Authorization: Bearer TWOJ_JWT_TOKEN

###

# 14. STATYSTYKI OGÓLNE
GET http://localhost:3000/api/progress/stats
Authorization: Bearer TWOJ_JWT_TOKEN

###

# ========================================
# HEALTH CHECK
# ========================================

# 15. SPRAWDŹ CZY SERWER DZIAŁA
GET http://localhost:3000/api/health

###


# ========================================
# INSTRUKCJE:
# ========================================

# 1. Zainstaluj Postman lub Thunder Client (VS Code extension)
# 2. Skopiuj powyższe requesty
# 3. Zamień TWOJ_JWT_TOKEN na token otrzymany z /api/auth/login
# 4. Zamień TOKEN_Z_MAILA na token z otrzymanego emaila
# 5. Testuj API!

# Alternatywnie możesz użyć curl w terminalu:

# Przykład - rejestracja:
# curl -X POST http://localhost:3000/api/auth/register \
#   -H "Content-Type: application/json" \
#   -d '{"email":"test@example.com","password":"haslo123"}'

# Przykład - logowanie:
# curl -X POST http://localhost:3000/api/auth/login \
#   -H "Content-Type: application/json" \
#   -d '{"email":"test@example.com","password":"haslo123"}'

# Przykład - profil (z tokenem):
# curl -X GET http://localhost:3000/api/user/profile \
#   -H "Authorization: Bearer TWOJ_JWT_TOKEN"
